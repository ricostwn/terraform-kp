global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
  
  - job_name: 'node-exporter'
    static_configs:
      - targets: [
{% for host in groups['web_servers'] %}
          '{{ hostvars[host]['internal_ip'] }}:9100',
{% endfor %}
        ]
  
  - job_name: 'web-servers'
    static_configs:
      - targets: [
{% for host in groups['web_servers'] %}
          '{{ hostvars[host]['internal_ip'] }}:3000',
{% endfor %}
        ]